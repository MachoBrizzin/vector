<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vector.Explorer.RobotControl">
  <ContentView.Content>
		<StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
			

			<Label Text="{Binding Connection.RobotName }" />

			<Button Text="{Binding ConnectCommand.DisplayName}" Command="{Binding ConnectCommand}"/>

		</StackLayout>
	</ContentView.Content>
</ContentView>