<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vector.Explorer.VectorControl">
  <ContentView.Content>
	<StackLayout>
		<StackLayout Orientation="Horizontal">
			<Label Text="A: " TextColor="Red" />
				<Label Text="{Binding Gamepad.A }" />
			</StackLayout>
		
			<TableView>
				<TableRoot>
					<TableSection>
						<EntryCell x:Name="RobotName" Text="Vector-G7K2" Label="Robot Name"/>
					</TableSection>
				</TableRoot>
			</TableView>
			
			<Button Command="{Binding ConnectCommand}" CommandParameter="{Binding Text, Source={x:Reference RobotName}}" Text="{Binding ConnectCommand.DisplayName}" />
	</StackLayout>
	</ContentView.Content>
</ContentView>