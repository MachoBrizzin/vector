<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Vector.Explorer.GrantApiAccess">
    <ContentPage.Content>
        <StackLayout>
			<TableView Intent="Settings">
				<TableRoot>
					<TableSection Title="Connect to your Vector">
						<EntryCell Text="{Binding Connection.RobotName}" Label="Robot Name"/>
						<TextCell Text="asdfdsfd" />
						<EntryCell Text="{Binding Connection.IpAddress}" Label="IP Address"/>
						<EntryCell Text="{Binding Connection.SerialNum}" Label="Serial Number"/>
						<EntryCell Text="{Binding Connection.UserName}" Label="User Name"/>
						<EntryCell Text="{Binding Connection.Password}" Label="Password"/>
						<ViewCell>
							<Grid>
								<Grid.ColumnDefinitions>
									<ColumnDefinition/>
									<ColumnDefinition/>
								</Grid.ColumnDefinitions>
								<Button BackgroundColor="LightBlue" Command="{Binding Connection.ConnectCommand}" Text="Connect" />
								<Button Grid.Column="1" Command="{Binding Connection.CancelCommand}" Text="Cancel" />
							</Grid>
						</ViewCell>
					</TableSection>
				</TableRoot>
			</TableView>
		</StackLayout>
    </ContentPage.Content>
</ContentPage>